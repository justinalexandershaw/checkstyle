<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
    "-//Puppy Crawl//DTD Check Configuration 1.3//EN"
    "http://www.puppycrawl.com/dtds/configuration_1_3.dtd">

<module name="Checker">
  <module name="TreeWalker">
    <!-- ADVANCED -->
    
    <!-- Enforces the no ternary operators (inline conditionals) rule. -->
    <module name="AvoidInlineConditionals">
      <property name="id" value="NoTernaryOperators"/>
      <message key="inline.conditional.avoid" 
       value="Advanced material is not allowed. Try removing this ternary operator."
       />
    </module>

    <!-- COMMENTS -->

    <module name="RegexpHeader">
      <property
        name="header"
        value="^//(\s)?([a-zA-Z]{2,}\s[a-zA-Z]{1,}'?-?[a-zA-Z]{2,}\s?([a-zA-Z]{1,})?\s?([a-zA-Z]{1,})?)$
          \n^//(\s)?(\d){1,2}/(\d){1,2}/(\d){1,2}$
          \n^// All rights reserved$"
        />
    </module>

    <!-- CONTROL STRUCTURE -->

    <!-- METHODS -->

    <!-- READABILITY -->

    <!-- Checks there are no non-blank prints in main. -->
    <module name="edu.uw.cs.checks.readability.MainIsAConsiseSummaryCheck" />

    <!-- REDUNDANCY -->

    <!-- STRUCTURE -->

    <!-- Enforces the no package statement rule. -->
    <module name="edu.uw.cs.checks.structure.NoPackageStatementsCheck" />
    <!-- Enforces the wildcard-only import rule. -->
    <module name="edu.uw.cs.checks.structure.OnlyWildcardImportsCheck" />
  </module>
</module>